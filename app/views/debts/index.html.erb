<h3 class="section-title">負債</h3>

<div class="each-monthly-flow">
  <% if @sum_monthly_debts %>
    毎月の返済額 ： <%= @sum_monthly_debts %>
  <% end %>
</div>

<div class="modal-trigger">
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal">
    <i class="fas fa-plus"></i>
  </button>
</div>

<table class="table">
  <thead>
    <th>負債名</th>
    <th>負債総額</th>
    <th>毎月の返済額</th>
    <th>毎月の返済日</th>
    <th>完済日</th>
    <th></th>
  </thead>
  <% if @debts %>
    <tbody>
      <% @debts.each do |debt| %>
        <tr>
          <td><%= debt.title %></td>
          <td><%= debt.debt_total_amount %></td>
          <td><%= debt.debt_withdrawal %></td>
          <td><%= debt.withdrawal_date %></td>
          <td><%= debt.full_payment_date %></td>
          <td><%= link_to debt, method: :delete, data: { confirm: "本当に削除しますか?" }, class: 'btn btn-default' do %><i class="far fa-times-circle"></i><% end %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    There is no debts.
  <% end %>
</table>

<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">負債登録</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= form_for(@debt, :url => {:action => 'create'}) do |f| %>
        <div class="modal-body">
          <% if false %>
            <ul>
              <%= @debt.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
              
          <div class="form-group">
            <%= f.text_field :title, {placeholder: "負債名", class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.number_field :debt_total_amount, {placeholder: "負債総額", class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.number_field :debt_withdrawal, {placeholder: "毎月の返済額", class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.label :withdrawal_date, "毎月の返済日" %>
            <%= f.select :withdrawal_date, 1..31, {}, {class: 'form-control'} %>
          </div>
        </div>
          
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
          <%= f.submit "登録", class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
