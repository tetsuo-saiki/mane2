<div class="main-container">
<div class="card-wrapper">
  <div class="card"  style="width: 20rem;">
    <div class="card-body">      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :email, "Eメール" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
        </div>
      
        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <span style="font-size:12px;">（<%= @minimum_password_length %> 文字以上）</span>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, "パスワード" %>
          <span style="font-size:12px;">（再入力）</span><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
        </div>
    </div>
    <div class="card-footer">
        <%= f.submit "登録", class: "btn btn-primary" %>
      <% end %>
      <%= link_to new_session_path(resource_name), data: {turbolinks: false} do %>
        <i class="fas fa-sign-in-alt"></i>
      <% end %>
    </div>
  </div>
</div>
</div>
