<% if @sum_monthly_incomes %>
  収入合計 ： <%= @sum_monthly_incomes %>
  <% if @selected_month %>
    (<%= @selected_month.year %>年<%= @selected_month.month %>月)
  <% end %>
<% end %>

<%= form_tag('/incomes', :method => :get) do %>
  <div class="form-group">
    <%= date_select :select_month, {}, class: 'form-control', discard_day: true %>
  </div>
  
  <div class="form-group">
    <%= submit_tag "search", class:'btn btn-primary' %>
  </div>
<% end %>

<div class="modal-trigger">
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal">
    <i class="fas fa-plus"></i>
  </button>
</div>

<table class="table">
  <thead>
    <th>title</th>
    <th>income_amount</th>
    <th>income_date</th>
    <th></th>
  </thead>
  <% if @incomes %>
    <tbody>
      <% @incomes.each do |income| %>
        <tr>
          <td><%= income.title %></td>
          <td><%= income.income_amount %></td>
          <td><%= income.income_date %></td>
          <td><%= link_to "delete", income, method: :delete, data: { confirm: "本当に削除しますか?" }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    There is no incomes.
  <% end %>
</table>

<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <%= form_for(@income, :url => {:action => 'create'}) do |f| %>
        <div class="modal-body">
          <% if false %>
            <ul>
              <%= @income.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
              
          <div class="form-group">
            <%= f.text_field :title, {placeholder: "title", class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.number_field :income_amount, {placeholder: "income_amount", class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.date_field :income_date, value: @date.strftime("%Y-%m-%d"), class: 'form-control' %>
          </div>
        </div>
          
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "submit", class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
