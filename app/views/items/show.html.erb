<table class="table">
  <% if @item %>
    <tbody>
      <tr>
        <th>id</th>
        <td><%= @item.id %></td>
      </tr>
      <tr>
        <th>title</th>
        <td><%= @item.title %></td>
      </tr>
      <tr>
        <th>price</th>
        <td><%= @item.price %></td>
      </tr>
      <tr>
        <th>image</th>
        <td><% if @item.image_url %><%= @item.image_url %><% end %></td>
      </tr>
      <tr>
        <th>date</th>
        <td><%= @item.date %></td>
      </tr>
    </tbody>
  <% else %>
    There is no items.
  <% end %>
</table>

<%= link_to "delete", @item, method: :delete, data: { confirm: "本当に削除しますか?" }, class: 'btn btn-danger' %>
<%= link_to "back", items_path, class: 'btn btn-default' %>